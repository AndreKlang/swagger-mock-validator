{
    "swagger": "2.0",
    "info": {
        "title": "User Service",
        "version": "1.0.0"
    },
    "paths": {
        "/{accountId}/users": {
            "post": {
                "summary": "Create a new user",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "parameters": [{
                    "$ref": "#/parameters/accountId"
                }, {
                    "name": "body",
                    "in": "body",
                    "required": true,
                    "schema": {
                        "$ref": "#/definitions/newUser"
                    }
                }],
                "responses": {
                    "200": {
                        "description": "Success",
                        "schema": {
                            "$ref": "#/definitions/user"
                        }
                    },
                    "400": {
                        "description": "Bad request"
                    },
                    "404": {
                        "description": "The accountId is not found"
                    },
                    "500": {
                        "description": "Internal server error"
                    }
                }
            }
        },
        "/{accountId}/users/{userId}": {
            "get": {
                "summary": "Get a user",
                "produces": [
                    "application/json"
                ],
                "parameters": [{
                    "$ref": "#/parameters/accountId"
                }, {
                    "name": "userId",
                    "in": "path",
                    "description": "The user id of the user to get",
                    "required": true,
                    "type": "integer",
                    "format": "int32"
                }],
                "responses": {
                    "200": {
                        "description": "The user",
                        "schema": {
                            "$ref": "#/definitions/user"
                        }
                    },
                    "400": {
                        "description": "Bad request"
                    },
                    "404": {
                        "description": "The accountId or userId is not found"
                    },
                    "500": {
                        "description": "Internal server error"
                    }
                }
            }
        }
    },
    "definitions": {
        "newUser": {
            "type": "object",
            "properties": {
                "firstName": {
                    "type": "string"
                },
                "lastName": {
                    "type": "string"
                },
                "email": {
                    "type": "string"
                }
            },
            "required": [
                "firstName",
                "lastName",
                "email"
            ]
        },
        "user": {
            "type": "object",
            "properties": {
                "userId": {
                    "type": "integer",
                    "format": "int32"
                },
                "firstName": {
                    "type": "string"
                },
                "lastName": {
                    "type": "string"
                },
                "email": {
                    "type": "string"
                }
            },
            "required": [
                "userId",
                "firstName",
                "lastName",
                "email"
            ]
        }
    },
    "parameters": {
        "accountId": {
            "name": "accountId",
            "type": "integer",
            "format": "int32",
            "in": "path",
            "required": true
        }
    }
}
