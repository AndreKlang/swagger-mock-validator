{
    "swagger": "2.0",
    "info": {
        "title": "User Service",
        "version": "1.0.0"
    },
    "paths": {
        "/{accountId}/users/{userId}": {
            "get": {
                "summary": "Get a user",
                "produces": [
                    "application/json"
                ],
                "parameters": [{
                    "name": "accountId",
                    "type": "integer",
                    "format": "int32",
                    "in": "path",
                    "required": true
                }, {
                    "name": "userId",
                    "in": "path",
                    "description": "The user id of the user to get",
                    "required": true,
                    "type": "integer",
                    "format": "int32"
                }],
                "responses": {
                    "200": {
                        "description": "The user",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "userId": {
                                    "type": "integer",
                                    "format": "int32"
                                },
                                "firstName": {
                                    "type": "string"
                                },
                                "lastName": {
                                    "type": "string"
                                },
                                "email": {
                                    "type": "string"
                                }
                            },
                            "required": [
                                "userId",
                                "firstName",
                                "lastName",
                                "email"
                            ]
                        }
                    },
                    "400": {
                        "description": "Bad request"
                    },
                    "404": {
                        "description": "The accountId or userId is not found"
                    },
                    "500": {
                        "description": "Internal server error"
                    }
                }
            }
        }
    }
}
